  <ListBox ItemsSource="{Binding Lists}" 
           SelectedItem="{Binding SelectedList, Mode=TwoWay}">
    <ListBox.ItemTemplate>
      <DataTemplate>
        <TextBlock Text="{Binding Name}"/>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</Grid>-->
  </Grid>
</UserControl>
